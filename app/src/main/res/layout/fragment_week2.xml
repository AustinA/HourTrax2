<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="duhblea.me.hourtrax.Week2">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/monField"
            android:layout_alignParentTop="true"
            android:selectAllOnFocus="true"
            android:layout_toEndOf="@+id/textView3"
            android:layout_marginLeft="60dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/tueField"
            android:layout_below="@+id/monField"
            android:selectAllOnFocus="true"
            android:layout_alignStart="@+id/monField" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/wedField"
            android:layout_below="@+id/textView2"
            android:selectAllOnFocus="true"
            android:layout_alignStart="@+id/tueField" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/thurField"
            android:layout_below="@+id/wedField"
            android:selectAllOnFocus="true"
            android:layout_alignStart="@+id/wedField" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/friField"
            android:layout_below="@+id/thurField"
            android:selectAllOnFocus="true"
            android:layout_alignStart="@+id/thurField" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/satField"
            android:layout_below="@+id/friField"
            android:selectAllOnFocus="true"
            android:layout_alignStart="@+id/friField" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/sunField"
            android:layout_below="@+id/satField"
            android:selectAllOnFocus="true"
            android:layout_alignStart="@+id/satField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Monday"
            android:id="@+id/textView"
            android:layout_above="@+id/tueField"
            android:layout_alignParentStart="true"
            android:textColor="#747474" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Tuesday"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/tueField"
            android:layout_alignStart="@+id/textView"
            android:textColor="#747474" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Wednesday"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/wedField"
            android:layout_alignStart="@+id/textView2"
            android:textColor="#747474" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Thursday"
            android:id="@+id/textView4"
            android:layout_alignBottom="@+id/thurField"
            android:layout_alignStart="@+id/textView3"
            android:textColor="#747474" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Friday"
            android:id="@+id/textView5"
            android:layout_alignBottom="@+id/friField"
            android:layout_alignStart="@+id/textView4"
            android:textColor="#747474" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Saturday"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/satField"
            android:layout_alignStart="@+id/textView5"
            android:textColor="#747474" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Sunday"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/sunField"
            android:layout_alignStart="@+id/textView6"
            android:textColor="#747474" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear fields"
            android:id="@+id/clearBtn"
            android:layout_below="@+id/sunField"
            android:layout_alignEnd="@+id/sunField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/weekTotal"
            android:layout_below="@+id/clearBtn"
            android:layout_alignStart="@+id/textView7" />

    </RelativeLayout>

</FrameLayout>
