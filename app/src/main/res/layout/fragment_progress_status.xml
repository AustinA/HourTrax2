<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="duhblea.me.hourtrax.ProgressStatus">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalBiWeek"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/hoursProgress"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"
            android:text="Test"
            android:layout_marginBottom="60dp"
            android:textIsSelectable="true" />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/hoursProgress"
            android:maxHeight="50dp"
            android:minHeight="50dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:progressTint="#FF5722"
            android:outlineProvider="paddedBounds"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:indeterminate="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0 Hours"
            android:id="@+id/textView14"
            android:layout_below="@+id/hoursProgress"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="80 Hours"
            android:id="@+id/textView16"
            android:layout_below="@+id/hoursProgress"
            android:layout_alignRight="@+id/hoursProgress"
            android:layout_alignEnd="@+id/hoursProgress"
            android:layout_marginTop="1dp" />

    </RelativeLayout>
</FrameLayout>
